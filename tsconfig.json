{
  "compilerOptions": {
    "target": "ES6",                  // Target ECMAScript version
    "module": "commonjs",             // Module system
    "outDir": "./dist",               // Directory for compiled files
    "rootDir": "./server",            // Directory where your server source files are located
    "strict": true,                   // Enable strict type-checking options
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true           // Enables emit interoperability between CommonJS and ES Modules
  },
  "include": ["server/**/*"],         // Include all files in the server directory
  "exclude": ["node_modules"]         // Exclude node_modules directory
}

